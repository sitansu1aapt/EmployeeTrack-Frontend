<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PillButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/PillShapeAppearance</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PillShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Custom TextInputLayout style for better dark mode support -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/border</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <!-- Custom ExposedDropdownMenu style -->
    <style name="CustomExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/border</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxBackgroundMode">filled</item>
    </style>
</resources>
