<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF1744"
    android:gravity="center"
    android:padding="32dp">

    <!-- Alert Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_warning"
        android:layout_marginBottom="24dp"
        android:contentDescription="Alert Icon" />

    <!-- Alert Message -->
    <TextView
        android:id="@+id/tvAlertMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚨 SLEEP ALERT 🚨"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="4dp" />

    <!-- Current Time -->
    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Time: 00:00:00"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:alpha="0.9" />

    <!-- Warning Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ ATTENTION REQUIRED ⚠️\n\nYou must respond to this alert.\nPlease choose an action below."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:lineSpacingExtra="2dp"
        android:alpha="0.9" />

    <!-- Action Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Dismiss Button -->
        <Button
            android:id="@+id/btnDismiss"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="✓ DISMISS ALERT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_dismiss_alert"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Snooze Button -->
        <Button
            android:id="@+id/btnSnooze"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="⏰ SNOOZE (5 MIN)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_snooze_alert"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Footer Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yatri Sleep Alert System"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:alpha="0.7" />

</LinearLayout>