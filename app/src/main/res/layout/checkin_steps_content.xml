<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Location Step Content -->
    <LinearLayout
        android:id="@+id/locationStepContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCheckInPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:text="Please verify your location to check in"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_map_container"
            android:clipToOutline="true"
            android:clipToPadding="true"
            android:elevation="2dp"
            android:foregroundGravity="center">

            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvGeofenceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/confirmation_box_bg"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="You are within the site boundary"
            android:textColor="#0F5132"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Selfie Step Content -->
    <LinearLayout
        android:id="@+id/selfieStepContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">
        <TextView
            android:id="@+id/tvSelfiePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a selfie for verification"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#222222"/>
        <ImageView
            android:id="@+id/ivSelfiePreview"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/selfie_preview_bg"
            android:scaleType="centerCrop"/>
        <Button
            android:id="@+id/btnTakeSelfie"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:text="Take Selfie"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>
        <!-- Only keep the top-level selfie step buttons, remove bottom duplicates -->
    </LinearLayout>

    <!-- Notes Step Content -->
    <LinearLayout
        android:id="@+id/notesStepContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvNotesPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add notes (optional)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="16dp"
            android:textColor="@color/text_primary"/>
        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Notes"
            android:background="@color/border"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLines="5"/>
    </LinearLayout>
</LinearLayout>
