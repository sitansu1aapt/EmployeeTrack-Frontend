<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Location Step Content -->
    <LinearLayout
        android:id="@+id/locationStepContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCheckInPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:text="Please verify your location to check in"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_map_container"
            android:clipToOutline="true"
            android:clipToPadding="true"
            android:elevation="2dp"
            android:foregroundGravity="center">

            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvGeofenceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/confirmation_box_bg"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="You are within the site boundary"
            android:textColor="#0F5132"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Selfie Step Content -->
    <LinearLayout
        android:id="@+id/selfieStepContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/selfie_container_bg"
        android:padding="24dp"
        android:elevation="4dp"
        android:layout_marginHorizontal="16dp">
        
        <!-- Title -->
        <TextView
            android:id="@+id/tvSelfiePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                    android:text="@string/take_selfie_verification"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_primary"/>
        
        <!-- Circular Image Container -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">
            
            <!-- Circular ImageView -->
            <ImageView
                android:id="@+id/ivSelfiePreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/circular_image_placeholder"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:outlineProvider="background" />
            
            <!-- Camera Icon Overlay (when no image) -->
            <ImageView
                android:id="@+id/ivCameraIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"
                android:background="@drawable/circular_image_bg"
                android:padding="8dp"
                android:visibility="visible" />
        </FrameLayout>
        
        <!-- Take Selfie Button -->
        <Button
            android:id="@+id/btnTakeSelfie"
            android:layout_width="200dp"
            android:layout_height="52dp"
                    android:text="@string/take_selfie"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/btn_take_selfie_gradient"
            android:textColor="@color/white"
            android:elevation="3dp"
            android:layout_gravity="center_horizontal"/>
            
        <!-- Retake Button (hidden initially) -->
        <Button
            android:id="@+id/btnRetakeSelfie"
            android:layout_width="120dp"
            android:layout_height="40dp"
                    android:text="@string/retake"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="14sp"
            android:backgroundTint="@color/text_secondary"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Notes Step Content -->
    <LinearLayout
        android:id="@+id/notesStepContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">
        
        <!-- Beautiful Notes Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:elevation="6dp"
            android:radius="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                
                <!-- Header with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notes"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/primary" />
                    
                    <TextView
                        android:id="@+id/tvNotesPrompt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                                android:text="@string/add_notes_optional"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"/>
                </LinearLayout>
                
                <!-- Enhanced Notes Input -->
                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                            android:hint="@string/notes_hint"
                    android:background="@drawable/notes_input_bg"
                    android:padding="16dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="6"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:scrollbars="vertical"
                    android:overScrollMode="always"/>
                
                <!-- Character Counter (optional) -->
                <TextView
                    android:id="@+id/tvCharCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:text="0/500"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- Helpful Hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="ðŸ’¡ You can add notes about your work, location, or any relevant details"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:background="@drawable/hint_container_bg"
            android:padding="12dp"
            android:layout_marginHorizontal="16dp"/>
    </LinearLayout>
</LinearLayout>
