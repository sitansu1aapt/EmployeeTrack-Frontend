<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvSelfieStepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2: Selfie"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_primary"/>

    <TextView
        android:id="@+id/tvSelfieStepSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture and upload selfie"
        android:textSize="14sp"
        android:textColor="@color/textLight"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imgSelfiePreview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@color/card_bg"
        android:src="@drawable/ic_person"/>

    <Button
        android:id="@+id/btnTakeSelfie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Selfie"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue_500"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes (optional)"
        android:layout_marginTop="24dp"
        android:background="@color/card_bg"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/textLight"
        android:minHeight="60dp"
        android:gravity="top"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:maxLines="4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/blue_500"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="@color/blue_500"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
