{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug APK",
            "type": "shell",
            "command": ".\\gradlew.bat",
            "args": [
                "assembleDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Install Debug APK",
            "type": "shell",
            "command": "adb",
            "args": [
                "install",
                "-r",
                "${workspaceFolder}\\app\\build\\outputs\\apk\\debug\\app-universal-debug.apk"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build and Install",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Debug APK",
                "Install Debug APK"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": ".\\gradlew.bat",
            "args": [
                "clean",
                "assembleDebug"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "View Logcat (Filtered)",
            "type": "shell",
            "command": "adb",
            "args": [
                "logcat",
                "-s",
                "TasksFragment:D",
                "TasksAdapter:D"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "View Full Logcat",
            "type": "shell",
            "command": "adb",
            "args": [
                "logcat"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Clear Logcat",
            "type": "shell",
            "command": "adb",
            "args": [
                "logcat",
                "-c"
            ],
            "problemMatcher": []
        }
    ]
}
